{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@code/*": ["lib/entities/code/*"],
      "@language/*": ["lib/entities/language/*"],
      "@race/*": ["lib/entities/race/*"],
      "@user/*": ["lib/entities/user/*"],
      "@shared/*": ["lib/shared/*"],
      "@server/*": ["server/*"]
    }
  },
  "exclude": ["node_modules"]
}
